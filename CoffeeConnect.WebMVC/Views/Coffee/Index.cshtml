@model IEnumerable<CoffeeConnect.Models.CoffeeListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
<div class="alert alert-success fade in" role="alert">
    
    <button type="button" class="close" data-dismiss="alert">
        <span>&times;</span>
    </button>
    @TempData["SaveResult"]
</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CoffeeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoffeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerPound)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoffeeDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CoffeeId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoffeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PricePerPound)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoffeeDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.CoffeeId  }) |
            @Html.ActionLink("Details", "Details", new {  id=item.CoffeeId  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.CoffeeId  })
        </td>
    </tr>
}

</table>
